#!/usr/bin/env sh

set -e

#-------------------------------------------------
# hs
#-------------------------------------------------
# aliasing "home-manager switch" command for flake
CONFIG_DIR=$HOME/.config/nix
HOSTNAME=$(hostname) # Get the current hostname

nix --extra-experimental-features "nix-command flakes" \
  run --impure $CONFIG_DIR/#homeConfigurations.\"${HOSTNAME}\".activationPackage
